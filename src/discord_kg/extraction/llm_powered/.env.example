# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Override default models
OPENAI_MODEL=gpt-4-turbo
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# LLM Call Recording (for evaluation and optimization)
ENABLE_LLM_RECORDING=true
LLM_EXPERIMENT_NAME=prompt_optimization_v1

# Optional: Custom recording storage path
# LLM_RECORDING_PATH=bin/llm_evaluation/llm_calls.db